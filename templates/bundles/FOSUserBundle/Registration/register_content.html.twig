<form name="fos_user_registration" class="login-form" method="POST" action="{{ path('security_register') }}">
    <input type="hidden" id="fos_user_registration__token" name="fos_user_registration[_token]" value="{{  csrf_token('registration') }}">
    <!-- Email input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="username">Usuario</label>
        <input type="text" name="fos_user_registration[username]" id="username" class="form-control form-control-lg"/>
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" for="email">Correo eléctronico</label>
        <input type="email" name="fos_user_registration[email]" id="email" class="form-control form-control-lg"/>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="password">Contraseña</label>
        <input type="password" name="fos_user_registration[plainPassword][first]" id="password" class="form-control form-control-lg"/>
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" for="repeatPassword">Repetir Contraseña</label>
        <input type="password" name="fos_user_registration[plainPassword][second]" id="repeatPassword" class="form-control form-control-lg"/>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-lg btn-block">Registro</button>

    <div class="my-4">
        <span>Ya tienes cuenta? <a href="{{path('fos_user_security_login')}}" class="text-decoration-none h6">Haz login</a></span>
    </div>
</form>